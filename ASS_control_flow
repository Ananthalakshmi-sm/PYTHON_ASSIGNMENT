        "# Take inputs from user\n",
        "age = int(input(\"What is your Age? \"))\n",
        "pizza = input(\"Do you eat Pizza? (Yes/No): \").strip().lower()\n",
        "exercise = input(\"Do you do exercise? (Yes/No): \").strip().lower()\n",
        "\n",
        "if age < 30:\n",
        "    # check for the pizza condition\n",
        "    if pizza == \"yes\":\n",
        "        print(\"You are fit!!\")\n",
        "    else:\n",
        "        print(\"You are unfit!!\")\n",
        "else:\n",
        "    # check for the exercise condition\n",
        "    if exercise == \"yes\":\n",
        "        print(\"You are fit!!\")\n",
        "    else:\n",
        "        print(\"You are unfit!!\")\n"
